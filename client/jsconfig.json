{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@containers/*": ["src/containers/*"],
            "@hooks/*": ["src/hooks/*"],
            "@pages/*": ["src/pages/*"],
            "@redux/*": ["src/redux/*"],
            "@services/*": ["src/services/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "exclude": ["build", "config", "node_modules", "public", "scripts"]
}
